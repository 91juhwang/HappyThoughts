 <div class="container">
      <div class="row">  
         <div id="invisible" class="four columns">s</div>

         <div id="form_container" class="four columns">
              <h4>Log in</h4>

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
             
                    <%= f.email_field :email, autofocus: true, placeholder:'email', class:'u-full-width'%>

                    <%= f.password_field :password, autocomplete: "off", placeholder:'password', class:'u-full-width'%>
            
                  <% if devise_mapping.rememberable? -%>

                   
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
   
                  <% end -%>

               
                    <%= f.submit "Log in", class:'u-full-width'%>
            
                <% end %>

                <%= render "devise/shared/links" %>
          </div>  
        <div id="invisible" class="four columns">s</div>


      </div>

</div>