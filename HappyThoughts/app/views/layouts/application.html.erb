<!DOCTYPE html>
<html>
<head>
  <title>HappyThoughts</title>
  <script src="https://d3js.org/d3.v4.min.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- if the user is not signed in  -->
<% if !user_signed_in? %>

			<nav>
				<span id="logo">
					<span>happy</span>
					<span id="black">thoughts</span>
				</span>

				<ul class="topnav" id="myTopnav">
				  <li class="icon">
				    <a href="javascript:void(0);"  onclick="myFunction()">☰</a>
				  </li>
				   <li class="iconX">
				    <a href="javascript:void(0);"  onclick="myFunction()">X</a>
				  </li>
				  <li><a href="/users/login">Log In</a></li>
				  <li><a href="/users/sign-up">Sign Up</a></li>
				  <li><a href="/">Home</a></li>
				</ul>

			</nav>
<% end %> 


<!-- if the user is signed in -->
<% if user_signed_in? %>
	<nav>	

			<span id="logo">
				<span>happy</span>
				<span id="black">thoughts</span>
			</span>
	

				<ul class="topnav" id="myTopnav">
				  <li class="icon">
				    <a href="javascript:void(0);"  onclick="myFunction()">☰</a>
				  </li>
				   <li class="iconX">
				    <a href="javascript:void(0);"  onclick="myFunction()">X</a>
				  </li>
				  <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %> </li>
				  <li><a href="/users/edit">Settings</a></li>
				  <li><a href="/quotes">Favorites</a></li>
				  <li><a href="/posts">Profile</a></li>
				  
				</ul>
	</nav>
<% end %>	

<%= flash[:error] if flash[:error] %>


<%= yield %>

</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script> 
<script type="text/javascript" src="menu.js"></script>
</html>
