<div class="container">
     <div id="home" class="row"> 
		<% @user.quotes.each do |q| %>
			 <div id="quote" class="twelve columns">		
			 	<div id="close">				
					<%= link_to "X", quote_path(:id => q.id), 
							:method => :delete, 
							:data => { confirm: "Do you wish to delete your quote?" } %>
				</div>	
				<span id="comilla_1"> “ </span>
				<span id="comilla_2"> ” </span>
				<h5><%= q.quotes %> </h5>
				<h6> - <%= q.author %> </h6>

			 </div>  
		<% end %>
	</div>
</div>


             
        
