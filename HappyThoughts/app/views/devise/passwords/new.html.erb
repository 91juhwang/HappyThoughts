 <div class="container">
      <div class="row">  
          <div id="invisible" class="four columns">s</div>

          <div id="form_container" class="four columns">

					<h4>Forgot your password?</h4>

					<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
					  <%= devise_error_messages! %>
					
					    <%= f.email_field :email, autofocus: true, placeholder:'email', class:'u-full-width'%>
					 
					    <%= f.submit "Reset password instructions" %>
				
					<% end %>

					<%= render "devise/shared/links" %>

			</div>

			<div id="invisible" class="four columns">s</div>

		</div>
</div>